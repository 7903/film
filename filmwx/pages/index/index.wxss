/* pages/index/index.wxss */

.search_box {
  /* background-color: #eee; */
  height: 50px;
  /* border-bottom: 1px solid rgba(0, 0, 0, .2); */
}

.search_box view {
  display: inline-block;
}

.location {
  width: 30%;
  /* background-color: #0fc; */
  height: 50px;
  line-height: 50px;
  text-align: center;
}

.location view {
  display: inline-block;
}

.location .img {
  width: 24px;
  height: 24px;
  margin-left: 7px;
}

.location .img image {
  vertical-align: middle;
  width: 100%;
  height: 100%;
  display: inline-block;
}

.search {
  width: 70%;
  height: 100%;
  vertical-align: top;
}

.search .search_img_text {
  /* background-color: rgb(48, 95, 250); */
  width: 100%;
  position: relative;
}

.search_img_text .search_img {
  width: 32px;
  height: 32px;
  position: absolute;
  top: 10px;
  left: 10px;
}

.search_img_text .search_img image {
  width: 100%;
  height: 100%;
  display: block;
}

.search .search_img_text input {
  width: calc(90%-32px);
  margin: 7.5px 10px 0;
  border: 1px solid rgba(0, 0, 0, 0.3);
  border-radius: 10px;
  height: 35px;
  padding-left: 35px;
}

.list {
  height: calc(100vh - 50px);
}

.hot-list {
  height: 150px;
  border-bottom: rgba(0, 0, 0, 0.2) 1px solid;
  display: flex;
  align-items: center;
  padding-left: 10px;
}

.hot-list .img {
  width: 100px;
  height: 130px;
  background-color: #333;
}

.hot-list .img image{
  width: 100%;
  height: 100%;
  display: block;
}

.text {
  margin-left: 10px;
}

.text .title {
  display: block;
  font-size: 20px;
  color: rgb(7, 17, 27);
  line-height: 33px;
  width: 240px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  /* background-color: #f0c; */
}

.text .score {
  background-color: #659d0e;
  color: #fff;
  padding: 0 3px;
  margin-left: 7px;
  font-size: 16px;
}

.text .lead {
  display: block;
  width: 240px;
  font-size: 16px;
  line-height: 24px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.text .label {
  display: block;
  font-size: 16px;
  color: #659d0e;
  line-height: 24px;
}

.text .introduce {
  display: block;
  font-size: 16px;
  line-height: 24px;
  width: 240px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.text .date {
  display: block;
  font-size: 16px;
  line-height: 24px;
  color: rgb(7, 17, 27);
}
