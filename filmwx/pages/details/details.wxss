/* pages/details/details.wxss */

.bg_img {
    width: 100vw;
    height: 100vh;
    filter: blur(6px);
}

.bg_img image {
    width: 100%;
    height: 100%;
    display: block;
}

.details_content {
    position: absolute;
    top: 150px;
    left: 0;
    background-color: #fff;
    padding: 0 20px;
    width: calc(100vw - 40px);
    border-radius: 50px 50px 0 0;
}

.mp {
    height: 200px;
    position: relative;
    top: -80px;
}

.mp view {
    display: inline-block;
    vertical-align: top;
}

.mp .mp_img {
    width: 130px;
    height: 200px;
    border: 1px solid #fff;
}

.mp .mp_img image {
    width: 100%;
    height: 100%;
    display: block;
}

.mp .mp_text .name {
    position: absolute;
    top: 0;
    left: 140px;
    display: block;
    color: #fff;
    font-size: 28px;
    width: calc(100% - 140px);
    line-height: 50px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.mp .mp_text .nameEn {
    position: absolute;
    top: 50px;
    left: 140px;
    display: block;
    width: calc(100% - 140px);
    line-height: 30px;
    font-size: 18px;
    color: #fff;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.mp .mp_text .type {
    position: absolute;
    top: 90px;
    left: 140px;
    font-size: 18px;
    width: calc(100% - 140px);
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.mp .mp_text .mins {
    position: absolute;
    top: 120px;
    left: 140px;
    font-size: 18px;
}

.mp .mp_text .overallRating {
    position: absolute;
    top: 150px;
    left: 140px;
    font-size: 20px;
    background-color: chartreuse;
    padding: 5px 10px;
    color: #fff;
}

.introduce {
    width: 100vw;
    position: relative;
    top: -60px;
    left: -20px;
    background-color: #fff;
}

.introduce .blank_1 {
    height: 10px;
    background-color: #ddd;
}

.introduce .blank_2 {
    height: 10px;
    background-color: #ddd;
}

.introduce .blank_3 {
    height: 10px;
    background-color: #ddd;
    margin-top: 100px;
}

.introduce .story {
    padding: 20px;
    text-indent: 2em;
}

.introduce .actors {
    height: 230px;
}

.introduce .actors .actors_text {
    height: 60px;
    line-height: 60px;
    font-size: 24px;
    padding-left: 20px;
}

.introduce .actors_text .stills{
    float: right;
    margin-right: 20px;
    font-size: 18px;
    color: #659d0e;
}

.introduce .actors .actors_itme {
    /* background-color: coral; */
    height: 270px;
    padding: 0 10px;
}

.introduce .actors .itme_box {
    /* background-color: rgb(80, 255, 130); */
    height: 270px;
    white-space: nowrap;
    overflow-y: auto;
}

.actors .itme {
    display: inline-block;
    width: 130px;
    height: 100%;
    /* background-color: darkorchid; */
    vertical-align: top;
    margin: 0 10px;
    text-align: center;
}

.actors .itme image {
    width: 100%;
    height: 170px;
}

/* .actors .itme .img{
    display: inline-block;
    width: 130px;
    height: 170px;
    background-color: grey;
} */

.actors .itme .actors_name {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.actors .itme .actors_nameEn {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.actors .itme .actors_roleName {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.individual{
    padding: 20px 0;
    border-bottom: 1px solid #ccc;
}

.individual .left{
    display: inline-block;
    width: 90px;
}

.individual .right{
    display: inline-block;
    width: calc(100vw - 110px);
    vertical-align: top;
    /* padding-right: 20px; */
}

.individual .headImg{
    width: 60px;
    height: 60px;
    margin-left: 20px;
    border-radius: 50%;
    overflow: hidden;
}

.individual .headImg image{
    width: 100%;
    height: 100%;
}

.comment_top{
    padding-bottom: 10px;
    font-size: 14px;
    color: rgb(7, 17, 27);
}

.comment_top .comment_name{
    display: inline-block;
    width: 110px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.comment_top .comment_date{
    margin-left: 10px;
}

.comment_text{
    font-size: 17px;
    text-indent: 2em;
}

.comment_top .comment_rating{
    background-color: #659d0e;
    padding: 0 5px;
    color: #fff;
}