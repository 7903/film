/* pages/release/release.wxss */

.list {
    height: calc(100vh - 50px);
    /* background-color: #0fc; */
}

.hot-list {
    height: 150px;
    border-bottom: rgba(0, 0, 0, 0.2) 1px solid;
    display: flex;
    align-items: center;
    padding-left: 10px;
}

.hot-list .img {
    width: 100px;
    height: 130px;
    background-color: #333;
}

.hot-list .img image {
    width: 100%;
    height: 100%;
    display: block;
}

.text {
    margin-left: 10px;
}

.text .title {
    display: block;
    font-size: 20px;
    color: rgb(7, 17, 27);
    line-height: 33px;
    width: 240px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    /* background-color: #f0c; */
}

.text .score {
    background-color: #659d0e;
    color: #fff;
    padding: 0 3px;
    margin-left: 7px;
    font-size: 16px;
}

.text .lead {
    display: block;
    width: 240px;
    font-size: 16px;
    line-height: 24px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.text .label {
    display: block;
    font-size: 16px;
    color: #659d0e;
    line-height: 24px;
}

.text .introduce {
    display: block;
    font-size: 16px;
    line-height: 24px;
    width: 240px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.text .date {
    display: block;
    font-size: 16px;
    line-height: 24px;
    color: rgb(7, 17, 27);
}